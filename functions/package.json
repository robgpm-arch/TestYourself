{
  "name": "testyourself-functions",
  "description": "Firebase Cloud Functions for TestYourself Quiz App",
  "version": "1.0.0",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts || true",
    "typecheck": "tsc -noEmit",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@google-cloud/recaptcha-enterprise": "^6.3.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "firebase-admin": "12.7.0",
    "firebase-functions": "6.4.0",
    "nodemailer": "^6.9.16",
    "stripe": "^17.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^24.0.14",
    "@types/nodemailer": "^6.4.19",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "private": true
}
